.chat-main__message-list__message-container{data: {message: {id: message.id}}}
  .chat-main__message-list__message-container__property
    .chat-main__message-list__message-container__property__user-name
      = message.user.name
    .chat-main__message-list__message-container__property__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__message-container__message
    - if message.content.present?
      %p.chat-main__message-list__message-container__message__content
        = message.content
    = image_tag message.image.url, class: "chat-main__message-list__message-container__message__image" if message.image.present?
    