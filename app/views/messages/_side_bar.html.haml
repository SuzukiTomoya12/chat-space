.side-bar
  .side-bar__header
    .side-bar__header__box
      .side-bar__header__box__name
        = current_user.name
      %ul.side-bar__header__box__icon
        %li.side-bar__header__box__icon__new-group
          =link_to new_group_path do
            = icon('fa', 'edit', class: "icon")
        %li.side-bar__header__box__icon__edit-account
          =link_to edit_user_path(current_user) do
            = icon('fa', 'cog', class: "icon")

  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__room
        = link_to group_messages_path(group) do
          .side-bar__group-list__room__group-name
            = group.name
          .side-bar__group-list__room__message
            = group.show_last_message